{# Exploration Template #}
{% set emoji = config.options.use_emojis if config and config.options else true %}
{% set hierarchical = config.options.use_hierarchical_structure if config and config.options else true %}

{# Header with conditional emoji #}
{% if emoji %}🔍{% endif %} Exploration Session: {{ data.session_id }}
{{ "=" * 60 }}

{# Summary section #}
{% if emoji %}📊{% endif %} SUMMARY:
{% if hierarchical %}├──{% else %}•{% endif %} Session ID: {{ data.session_id }}
{% if hierarchical %}├──{% else %}•{% endif %} Project Path: {{ data.project_path }}
{% if hierarchical %}├──{% else %}•{% endif %} Intent: {{ data.intent }}
{% if hierarchical %}├──{% else %}•{% endif %} Total Trees: {{ data.total_trees }}
{% if hierarchical %}├──{% else %}•{% endif %} Token Count: {{ data.token_count }}
{% if hierarchical %}├──{% else %}•{% endif %} Max Tokens: {{ data.max_tokens }}
{% if hierarchical %}├──{% else %}•{% endif %} Token Usage: {{ ((data.token_count / data.max_tokens) * 100) | round(1) }}%
{% if hierarchical %}└──{% else %}•{% endif %} Compression: {{ data.compression_level }}

{# Confidence scores section #}
{% if data.confidence_scores %}
{% if emoji %}🎯{% endif %} CONFIDENCE SCORES:
{% for tree_id, score in data.confidence_scores.items() %}
{% if hierarchical %}├──{% else %}•{% endif %} {{ tree_id }}: {{ (score * 100) | round(1) }}%
{% endfor %}
{% endif %}

{# Trees section #}
{% if data.trees %}
{% if emoji %}🌲{% endif %} EXPLORATION TREES:
{% for tree in data.trees %}
{% if hierarchical %}├──{% else %}•{% endif %} {{ tree.tree_id }}: {{ tree.context_name }}
{% if hierarchical %}│   {% else %}  {% endif %}Confidence: {{ (tree.confidence * 100) | round(1) }}%
{% if hierarchical %}│   {% else %}  {% endif %}Entrypoints: {{ tree.entrypoints | length }}
{% if hierarchical %}│   {% else %}  {% endif %}Total Nodes: {{ tree.total_nodes }}
{% if hierarchical %}│   {% else %}  {% endif %}Max Depth: {{ tree.max_depth }}
{% if hierarchical %}│   {% else %}  {% endif %}Root File: {{ tree.root_file }}
{% if tree.description %}
{% if hierarchical %}│   {% else %}  {% endif %}Description: {{ tree.description[:100] }}{% if tree.description | length > 100 %}...{% endif %}
{% endif %}

{# Entrypoints for this tree #}
{% if tree.entrypoints %}
{% if hierarchical %}│   {% else %}  {% endif %}{% if emoji %}🎯{% endif %} Entrypoints:
{% for entrypoint in tree.entrypoints[:3] %}
{% if hierarchical %}│   ├──{% else %}  •{% endif %} {{ entrypoint.identifier }}
{% if hierarchical %}│   │   {% else %}    {% endif %}Location: {{ entrypoint.location }}
{% if hierarchical %}│   │   {% else %}    {% endif %}Type: {{ entrypoint.type }}
{% if hierarchical %}│   │   {% else %}    {% endif %}Relevance: {{ (entrypoint.relevance_score * 100) | round(1) }}%
{% endfor %}
{% if tree.entrypoints | length > 3 %}
{% if hierarchical %}│   └──{% else %}  •{% endif %} ... and {{ tree.entrypoints | length - 3 }} more entrypoints
{% endif %}
{% endif %}

{% if not loop.last %}
{% if hierarchical %}│{% endif %}
{% endif %}
{% endfor %}
{% else %}
{% if emoji %}❌{% endif %} No exploration trees found
{% endif %}
