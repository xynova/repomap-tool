# Dockerfile with Virtual Environment
FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Create virtual environment
RUN python -m venv /opt/venv

# Make sure we use the virtual environment
ENV PATH="/opt/venv/bin:$PATH"

# Copy requirements first for better caching
COPY requirements.txt .

# Upgrade pip and install dependencies in virtual environment
RUN pip install --upgrade pip && \
    pip install -r requirements.txt

# Install aider in development mode (if available) or from PyPI
RUN if [ -d "/aider" ]; then \
        pip install -e /aider; \
    else \
        pip install aider-chat; \
    fi

# Copy the repomap script and matchers
COPY external_repomap.py .
COPY fuzzy_matcher.py .
COPY adaptive_semantic_matcher.py .
COPY hybrid_matcher.py .
COPY semantic_matcher.py .
COPY entrypoint.sh .

# Make entrypoint executable
RUN chmod +x entrypoint.sh

# Create a volume for persistent cache
VOLUME ["/app/cache"]

# Set environment variables
ENV PYTHONPATH=/app
ENV CACHE_DIR=/app/cache
ENV VIRTUAL_ENV=/opt/venv

# Verify virtual environment is active
RUN which python && python --version && \
    which pip && pip --version

# Default command
ENTRYPOINT ["./entrypoint.sh"]
